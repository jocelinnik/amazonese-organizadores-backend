{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "./dist",
    "rootDir": "./src",
    "paths": {
      "@/*": ["./src/*"]
    },
    "sourceMap": true,
    "strict": false,
    "esModuleInterop": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./node_modules", "**/*.js"]
}